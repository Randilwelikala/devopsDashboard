@model ServerDashboard.models.Client

<h2>@Model.ClientName - Server Dashboard</h2>

<div style="display:flex; flex-wrap:wrap; gap:20px;">
@foreach (var server in Model.Servers)
{
    <div style="border:1px solid #ccc; padding:15px; width:300px; border-radius:10px;">
        <h3>@server.ServerName</h3>

        <p><b>Status:</b> @server.Status</p>
        <p><b>Location:</b> @server.Location</p>
        <p><b>IP:</b> @server.IpAddress</p>

        <h4>Metrics</h4>
        <p>CPU: @server.CpuUsage %</p>
        <p>RAM: @server.RamUsage %</p>
        <p>Disk: @server.DiskUsage %</p>

        <h4>Network</h4>
        <p>In: @server.NetworkIn MB/s</p>
        <p>Out: @server.NetworkOut MB/s</p>

        <h4>Anomalies</h4>
        <ul>
        @foreach (var a in server.Anomalies)
        {
            <li>@a.Type â€” @a.Description</li>
        }
        </ul>

        <a href="/Dashboard/Server/@server.ServerId">View Details</a>
    </div>
}
</div>
