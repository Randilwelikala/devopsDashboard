@page
@model SigNEXDashboard.Pages.IndexModel
@{
    ViewData["Title"] = "SigNEX DevOps Dashboard";
    Layout = null;
}

<h1>SigNEX Client Monitoring Dashboard</h1>
<p>Select a client below to view detailed performance metrics.</p>

<p>Data simulated as of: @Model.FullData.GeneratedTime.ToLocalTime().ToString("g")</p>

<h2>Active Clients (@Model.ClientInstances.Count)</h2>
@foreach (var instance in Model.ClientInstances)
{
    <div>
        <strong>@instance.ClientName</strong> – @instance.Status – @instance.Region
    </div>
}